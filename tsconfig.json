{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@component/*": ["component/*"],
      "@helper/*": ["helper/*"],
      "@screen/*": ["screen/*"],
      "@navigation/*": ["navigation/*"],
      "@store/*": ["state/store/*"],
      "@slice/*": ["state/slice/*"],
      "@hook/*": ["hook/*"],
      "@type/*": ["state/type/*"]
    }
  }
}
